# ================================
# Dockerfile para Streamlit + YOLO
# ================================

FROM python:3.10-slim

# ---- System deps necesarias para OpenCV ----
RUN apt-get update && apt-get install -y \
    ffmpeg libsm6 libxext6 libgl1-mesa-glx \
    libglib2.0-0 git wget build-essential \
    && rm -rf /var/lib/apt/lists/*

# ---- Crear directorio de la app ----
WORKDIR /app

# ---- Copiar requirements ----
COPY requirements_streamlit.txt .

# ---- Instalar dependencias ----
RUN pip install --upgrade pip
RUN pip install -r requirements_streamlit.txt

# ---- Copiar código principal ----
COPY streamlit_app.py .
COPY utils_tracker.py .

# ---- (Opcional) copiar archivos de config pequeños ----
COPY configs ./configs

# ---- Crear carpeta para modelos (se montará un volumen aquí) ----
RUN mkdir -p /app/models

# ---- Exponer puerto Streamlit ----
EXPOSE 8501

# ---- Comando principal ----
CMD ["streamlit", "run", "streamlit_app.py", \
     "--server.port=8501", "--server.address=0.0.0.0"]
